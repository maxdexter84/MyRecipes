<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ibtn_gallery_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:drawableTopCompat="@drawable/ic_baseline_image_search_24"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:text="@string/gallery"
        android:gravity="center"
        android:padding="20dp"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_photo_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />

    <TextView
        android:id="@+id/ibtn_photo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:clickable="true"
        android:text="@string/camera"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:backgroundTint="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:drawableTopCompat="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibtn_gallery_image"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>